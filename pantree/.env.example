# Pantree Subscribe & Save - Environment Configuration
# Copy this file to .env and configure for your environment

# Application Settings
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# Vector Database Settings
VECTORDB_HOST=localhost
VECTORDB_PORT=19530
VECTORDB_COLLECTION=customer_purchases
VECTORDB_DIMENSION=768

# Llama NIM Settings
LLAMA_NIM_ENDPOINT=http://localhost:8001
LLAMA_NIM_API_KEY=
LLAMA_NIM_MODEL=meta/llama-3.1-8b-instruct

# AWS Sagemaker Settings
SAGEMAKER_ENDPOINT=your-endpoint-name
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Simulation Settings
SIMULATION_MIN_PURCHASES=3
SIMULATION_MAX_PURCHASES=20
SIMULATION_MONTHS=6
SIMULATION_STREAM_DELAY=0.5

# Frequency Analysis Settings
FREQ_MIN_PURCHASES=3
FREQ_MIN_CONFIDENCE=50.0
FREQ_THRESHOLD_WEEKLY=8
FREQ_THRESHOLD_BIWEEKLY=16
FREQ_THRESHOLD_TRIWEEKLY=24

# Dataset Paths
LARGE_DATASET_PATH=large_dataset
FICTIONAL_CUSTOMERS_PATH=fictional_customers
